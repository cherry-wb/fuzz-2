<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" buttons="accept" buttonlabelaccept="OK" title="Video Information" onload="initDialog();" style="overflow: auto;" >

  <script type="application/x-javascript" src="chrome://fuzz/content/json2.js"/>
  <script type="application/x-javascript" src="chrome://fuzz/content/fuzz_ui_helper.js"/>
  <script type="application/x-javascript" src="chrome://fuzz/content/fuzz_conversion.js"/>
  <script type="application/x-javascript" src="chrome://fuzz/content/displays/video.js"/>

  <groupbox>
    <caption label="Video Details"/>
    <grid>
      <columns>
        <column flex="1"/>
        <column flex="2"/>
        <column flex="1"/>
      </columns>
      <rows>

        <row id="fuzz-video-details-row-depiction">
          <spacer flex="1"/>
          <hbox>
            <image id="fuzz-video-details-depiction" maxheight="200" maxwidth="200" src="file:///home/msporny/work/fuzz/firefox/extension/chrome/fuzz/content/fuzz32.png" onclick="window.sizeToContent();"/>
          </hbox>
          <spacer flex="1"/>
        </row>

        <row id="fuzz-video-details-row-title">
          <label value="Title"/>
          <label id="fuzz-video-details-title" value="TITLE_VALUE"/>
          <button type="menu" label="Use Title to...">
            <menupopup id="fuzz-video-details-title-menupopup">
            </menupopup>
          </button>
        </row>

        <row id="fuzz-video-details-row-creator">
          <label value="Creator"/>
          <label id="fuzz-video-details-creator" value="CREATOR_VALUE"/>
          <button type="menu" label="Use Creator to...">
            <menupopup id="fuzz-video-details-creator-menupopup">
            </menupopup>
          </button>
        </row>

        <row id="fuzz-video-details-row-contributor">
          <label value="Contributor"/>
          <label id="fuzz-video-details-contributor" 
                 value="CONTRIBUTOR_VALUE"/>
          <button type="menu" label="Use Contributor to...">
            <menupopup id="fuzz-video-details-contributor-menupopup">
            </menupopup>
          </button>
        </row>

        <row id="fuzz-video-details-row-published">
          <label value="Published"/>
          <label id="fuzz-video-details-published" value="PUBLISHED_VALUE"/>
        </row>

        <row id="fuzz-video-details-row-description">
          <label value="Description"/>
          <description id="fuzz-video-details-description" 
                       value="DESCRIPTION_VALUE"/>
        </row>

        <row id="fuzz-video-details-row-position">
          <label value="Position"/>
          <label id="fuzz-video-details-position" value="POSITION_VALUE"/>
        </row>

        <row id="fuzz-video-details-row-sample">
          <label value="Sample"/>
          <label id="fuzz-video-details-sample" style="text-link" 
                 value="SAMPLE_VALUE"/>
          <button id="fuzz-video-details-sample-button" 
                  label="Get Sample"/>
        </row>

        <row id="fuzz-video-details-row-download">
          <label value="Download"/>
          <label id="fuzz-video-details-download" style="text-link"
                 value="DOWNLOAD_VALUE"/>
          <button id="fuzz-video-details-download-button" 
                  label="Download"/>
        </row>

        <row id="fuzz-video-details-row-type">
          <label value="Genre"/>
          <label id="fuzz-video-details-type" value="TYPE_VALUE"/>
          <!--button type="menu" label="Use Genre to...">
            <menupopup id="fuzz-video-details-type-menupopup">
            </menupopup>
          </button -->
        </row>

        <row id="fuzz-video-details-row-rating">
          <label value="Rating"/>
          <label id="fuzz-video-details-rating" value="RATING_VALUE"/>
          <!--button type="menu" label="Use Rating to...">
            <menupopup id="fuzz-video-details-rating-menupopup">
            </menupopup>
          </button -->
        </row>

        <row id="fuzz-video-details-row-license">
          <label value="License"/>
          <label id="fuzz-video-details-license" value="LICENSE_VALUE"/>
          <button type="menu" label="Use License to...">
            <menupopup id="fuzz-video-details-license-menupopup">
            </menupopup>
          </button>
        </row>

        <row id="fuzz-video-details-row-duration">
          <label value="Duration"/>
          <label id="fuzz-video-details-duration" value="DURATION_VALUE"/>
        </row>

        <row id="fuzz-video-details-row-costs">
          <label value="Price"/>
          <label id="fuzz-video-details-costs" value="COSTS_VALUE"/>
        </row>

        <row id="fuzz-video-details-row-payment">
          <label value="Payment"/>
          <label id="fuzz-video-details-payment" style="text-link"
                 value="PAYMENT_VALUE"/>
          <button id="fuzz-video-details-payment-button" 
                  label="Purchase"/>
        </row>

        <row hidden="true" id="fuzz-video-details-row-contains">
          <label value="Contains"/>
          <label id="fuzz-video-details-contains" value="CONTAINS_VALUE"/>
        </row>

       </rows>
    </grid>
  </groupbox>
  <spacer flex="1"/>
</dialog>
